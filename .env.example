# ===========================================
# MIRA AI Assistant - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# DATABASE
# ===========================================
# MongoDB connection string (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/MIRA

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI API Key (for GPT-4 fallback and Whisper STT)
OPENAI_API_KEY=sk-proj-your-openai-key

# Google Gemini API Key (primary AI model)
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# TEXT-TO-SPEECH
# ===========================================
# ElevenLabs API Key
ELEVENLABS_API_KEY=sk_your-elevenlabs-key

# Voice IDs for MI and RA agents
ELEVENLABS_VOICE_MI=your-mi-voice-id
ELEVENLABS_VOICE_RA=your-ra-voice-id

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT Secret - Use a strong random string (min 32 chars)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# NextAuth Secret - Use a strong random string
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key

# NextAuth URL - Your production domain
NEXTAUTH_URL=https://your-domain.com

# ===========================================
# APPLICATION
# ===========================================
# Node environment
NODE_ENV=production

# Port (default 3000)
PORT=3000

# ===========================================
# OPTIONAL - MONITORING
# ===========================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# DOCKER SPECIFIC
# ===========================================
# These are used in docker-compose
COMPOSE_PROJECT_NAME=mira
